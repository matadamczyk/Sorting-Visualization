{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**"]
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static",
      "config": { "includeFiles": ["public/**"] }
    },
    {
      "src": "views/**",
      "use": "@vercel/static",
      "config": { "includeFiles": ["views/**"] }
    }
  ],
  "headers": [
    {
      "source": "/js/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/js/auth/(.*)", "destination": "/public/js/auth/$1" },
    { "source": "/js/(.*)", "destination": "/public/js/$1" },
    { "source": "/css/(.*)", "destination": "/public/css/$1" },
    { "source": "/about", "destination": "/views/about.html" },
    { "source": "/profile", "destination": "/views/profile.html" },
    { "source": "/(.*)", "destination": "/views/index.html" }
  ],
  "routes": [
    {
      "src": "/api/(.)",
      "dest": "server/server.js"
    },
    {
      "src": "/auth/(.)",
      "dest": "server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "server/server.js"
    }
  ]
}
